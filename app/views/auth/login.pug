block title
  | Login

block content
  section
    h1 Login
    p Login to your account
    form.auth#login
      input(type="text", name="username", placeholder="Username e.g. saqib123")
      .username.error
      input(type="password", name="password", placeholder="Password")
      .password.error
      input(type="submit", value="Login")

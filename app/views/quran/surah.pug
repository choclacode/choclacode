extends ../layout.pug

block title
  | #{info.eng} &laquo; #{info.ara}

block content
  section.surah
    h1.title
      | #{ info.eng }
      br
      | #{ info.ara }
    ul
      if info.bismillah
        li#bismillah
          span.ara بِسْمِ اللَّهِ الرَّحْمَنِ الرَّحِيمِ
      for a in surah
        li(id=a.num)
          .num= `${info.num} : ${a.num}`
          if show.ara
            .ara= a.ara
          if show.eng
            .num= info.translations.eng
            .eng= a.eng
          if show.ban
            .num= info.translations.eng
            .ban= a.ban
      hr

extends ../layout.pug

block title
  | Users

block content
  section
    .container
      h1 Users
      ul.card-container
        for u in users
          li.card
            .card-img(style=`min-height: 125px;`)
              img.avatar(src=u.profileImg, alt="")
            h3.card-title @#{ u.username }
            .card-link
              a(href=`/users/@${u.username}`)
                i.material-icons.btn person

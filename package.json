{
  "name": "choclacode",
  "version": "2.3.0",
  "description": "Choclacode official website",
  "main": "app",
  "author": "Saqib <saqib@choclacode.eu.org> (http://choclacode.eu.org/)",
  "license": "ISC",
  "engines": {
    "node": "15.x"
  },
  "scripts": {
    "start": "node .",
    "test": "jest --forceExit --config config/jest.config.js",
    "serve": "npx concurrently \"npm:serve:app\" \"npm:watch\"",
    "serve:app": "npx nodemon --config config/nodemon.json",
    "build": "npx concurrently \"npm:build:*\"",
    "build:js": "webpack --config config/webpack.config.js",
    "build:sass": "npx node-sass app/resources/sass/main.scss -o public/ --output-style compressed",
    "watch": "npx concurrently \"npm:watch:*\"",
    "watch:js": "npm run build:js -- -w",
    "watch:sass": "npm run build:sass -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/choclacode/choclacode.git"
  },
  "bugs": {
    "url": "https://github.com/choclacode/choclacode/issues"
  },
  "homepage": "http://choclacode.eu.org/",
  "keywords": [
    "choclacode",
    "saqib.ml"
  ],
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "marked": "^1.2.7",
    "mongoose": "^5.10.12",
    "multer": "^1.4.2",
    "multer-gridfs-storage": "^4.2.0",
    "pug": "^3.0.2",
    "socket.io": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.6",
    "socket.io-client": "^4.0.0",
    "supertest": "^6.1.3",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0"
  }
}
